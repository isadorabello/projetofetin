<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="#F5F5EF"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activity.CadastroActivity">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/farmaapp"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="96dp" />

        <EditText
            android:id="@+id/editCadastroNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Nome Completo"
            android:inputType="textPersonName"
            android:padding="16dp"
            tools:layout_editor_absoluteX="-27dp"
            tools:layout_editor_absoluteY="485dp" />

        <EditText
            android:id="@+id/editCadastroEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            tools:layout_editor_absoluteX="-27dp"
            tools:layout_editor_absoluteY="485dp" />

        <EditText
            android:id="@+id/editCadastroSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:padding="16dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="641dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Cliente" />

            <Switch
                android:id="@+id/switchTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estabelecimento" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editCadastroTelefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_edit_text"
                android:ems="10"
                android:hint="Telefone"
                android:inputType="number"
                android:padding="16dp"
                tools:layout_editor_absoluteX="-27dp"
                tools:layout_editor_absoluteY="485dp" />

            <EditText
                android:id="@+id/editCadastroEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_edit_text"
                android:ems="10"
                android:hint="EndereÃ§o"
                android:inputType="textPersonName"
                android:padding="16dp"
                tools:layout_editor_absoluteX="-27dp"
                tools:layout_editor_absoluteY="485dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearEstabelecimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <EditText
                android:id="@+id/editCadastroEstabelecimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_text"
                android:ems="10"
                android:hint="Nome do Estabelecimento"
                android:inputType="textPersonName"
                android:padding="16dp"
                tools:layout_editor_absoluteX="-27dp"
                tools:layout_editor_absoluteY="485dp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="16dp"
            android:text="Cadastrar"
            android:theme="@style/botaoPadrao" />

    </LinearLayout>
</ScrollView>